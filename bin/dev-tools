#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use DevTools\Commands\MakeAccessorCommand;
use DevTools\Commands\MakeEntityCommand;
use DevTools\Commands\MakeRepositoryCommand;

// use DevTools\Commands\MakeValueObjectCommand;
// use DevTools\Commands\MakeAggregateCommand;
// use DevTools\Commands\MakeDomainEventCommand;

$application = new Application('Dev Tools', '1.0.0');

// Register commands
$application->add(new MakeAccessorCommand());
$application->add(new MakeEntityCommand());
// $application->add(new MakeValueObjectCommand());
// $application->add(new MakeAggregateCommand());
// $application->add(new MakeDomainEventCommand());
$application->add(new MakeRepositoryCommand());

$application->run();
