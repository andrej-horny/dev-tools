#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';


use Symfony\Component\Console\Application;
use DevTools\Commands\Domain;
use DevTools\Commands\Infrastructure;

// use DevTools\Commands\Domain\MakeValueObjectCommand;
// use DevTools\Commands\Domain\MakeAggregateCommand;
// use DevTools\Commands\Domain\MakeDomainEventCommand;

$application = new Application('Dev Tools', '1.0.0');

// Register commands
$application->add(new Domain\MakeAccessorCommand());
$application->add(new Domain\MakeEntityCommand());
$application->add(new Domain\MakeEntityServiceCommand());
$application->add(new Domain\MakeValueObjectIdCommand());
// $application->add(new Domain\MakeValueObjectCommand());
// $application->add(new Domain\MakeAggregateCommand());
// $application->add(new Domain\MakeDomainEventCommand());
$application->add(new Domain\MakeRepositoryCommand());

// infrastructure
$application->add(new Infrastructure\MakeRepositoryCommand());
$application->add(new Infrastructure\MakeMapperCommand());


$application->run();
