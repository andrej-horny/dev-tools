#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

use Symfony\Component\Console\Application;
use DevTools\Commands\Domain\MakeAccessorCommand;
use DevTools\Commands\Domain\MakeEntityCommand;
use DevTools\Commands\Domain\MakeEntityServiceCommand;
use DevTools\Commands\Domain\MakeRepositoryCommand;

// use DevTools\Commands\Domain\MakeValueObjectCommand;
// use DevTools\Commands\Domain\MakeAggregateCommand;
// use DevTools\Commands\Domain\MakeDomainEventCommand;

$application = new Application('Dev Tools', '1.0.0');

// Register commands
$application->add(new MakeAccessorCommand());
$application->add(new MakeEntityCommand());
$application->add(new MakeEntityServiceCommand());
// $application->add(new MakeValueObjectCommand());
// $application->add(new MakeAggregateCommand());
// $application->add(new MakeDomainEventCommand());
$application->add(new MakeRepositoryCommand());

$application->run();
